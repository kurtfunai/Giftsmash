<h3>All Lists</h3>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Event date</th>
    <th>Actions</th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= link_to list.title, list %></td>
    <td><%= list.description %></td>
    <td><%= list.event_date %></td>
    <td><%= link_to 'Show', list %>
    
        <% if can? :update, list %>
        <%= link_to 'Edit', edit_list_path(list) %>
        <% end %>
        <% if can? :destroy, list %>
        <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>   
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, List %>
<%= link_to 'New List', new_list_path %>
<% end %>
