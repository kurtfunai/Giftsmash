<h3 class="pull-left"><i class="icon-th-list"></i> Lists</h3>
<% if can? :create, List %>
<%= link_to 'New List', new_list_path, :class=>'btn btn-small pull-left', :style=>'margin:16px 0 0 12px'%>
<% end %>
<div class="clear-fix"></div>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Event date</th>
    <th>Actions</th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><p class="lead"><%= link_to list.title, list %></p></td>
    <td><%= list.description %></td>
    <td><%= list.event_date %></td>
    <td>
      <% if can? :update, list %>
        <%= link_to 'Edit', edit_list_path(list), :class=>'btn btn-mini' %>
      <% end %>
      <% if can? :destroy, list %>
        <%= link_to 'Destroy', list, method: :delete, :class=>'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>  
  </tr>
<% end %>
</table>