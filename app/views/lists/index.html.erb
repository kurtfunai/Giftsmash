<div class="row">
  <h3 class="pull-left offset3"><i class="icon-th-list"></i> Lists</h3>
  <% if can? :create, List %>
  <%= link_to 'New List', new_list_path, :class=>'btn btn-small btn-primary pull-left', :style=>'margin:16px 0 0 12px'%>
  <% end %>
  <div class="clearfix"></div>
</div>

<div class="row">
<% if !@lists.none? %>
  <% @lists.each do |list| %>
    <div class="well span5 offset3">
      <h2 style="padding-top:0;margin-top:0;">
        <%= link_to list.title, list %>&nbsp;
        <!--<small>
          <%= list.event_date.strftime("%B %d, %Y")  %>
        </small>-->
      </h2>
      <div>
        <%= list.items.count %> Items
        <%= link_to raw('<i class="icon-eye-open"></i>'), list, :title=>'View', :class=>'btn btn-small' %>
        <% if can? :update, list %>
          <%= link_to raw('<i class="icon-pencil"></i>'), edit_list_path(list), :title=>'Edit', :class=>'btn btn-small' %>
        <% end %>
        <% if can? :destroy, list %>
          <%= link_to raw('<i class="icon-trash"></i>'), list, method: :delete, :title=>'Delete', :class=>'btn btn-small btn-danger', data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>

      <div class="clearfix"></div>
    </div>
  <% end %>
<% else %>
  <div class="well span5 offset3">You have no lists! To start wishing, <%= link_to 'create one', new_list_path %> now.</div>
<% end %>
</div>