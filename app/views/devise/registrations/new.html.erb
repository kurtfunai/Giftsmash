<div class="span3 offset4">
<h2>
  Sign up <small>or <%= link_to "use Twitter", user_omniauth_authorize_path(:twitter) %></small>
</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-inline' }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="control-group">
    <div><%= f.label :email, :class => 'control-label' %>
    <div class="controls"><%= f.email_field :email, :autofocus => true, :class => 'text_field' %></div></div>
  </div>

  <div class="control-group">
    <div><%= f.label :password, :class => 'control-label' %>
    <div class="controls"><%= f.password_field :password, :class => 'text_field' %></div></div>
  </div>  

  <div class="control-group">
    <div><%= f.label :password_confirmation, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :class => 'text_field' %></div>
    </div>
  </div>

  <div class="control-group">
    <%= render "devise/shared/links" %>
  </div>

    <%= f.submit "Sign up", :class => 'btn btn-primary'  %> 
<% end %>


</div>